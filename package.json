{
  "name": "thread-app-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "node build/index.js --ignore client",
    "dev": "tsc-watch --onSuccess \"npm run build\"",
    "client": "npm start --prefix client",
    "start": "concurrently --kill-others-on-fail \"npm run dev\" \"npm run client\""
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.3",
    "concurrently": "^8.2.0",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@apollo/server": "^4.8.1",
    "@prisma/client": "5.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.7.1"
  }
}
