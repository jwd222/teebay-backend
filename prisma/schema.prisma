// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  firstName   String
  lastName    String?
  address     String
  phoneNumber String
  email       String  @unique
  password    String
  salt        String

  fromTransactions Transaction[] @relation(name: "from")
  toTransactions   Transaction[] @relation(name: "to")
  ownedProducts    Product[]
}

model Product {
  id          String @id @default(uuid())
  title       String
  category    String
  description String

  buyPrice  Float
  rentPrice Float

  owner   User?   @relation(fields: [ownerId], references: [id])
  ownerId String?

  transactions Transaction[]
}

enum TransactionStatus {
  RENTING
  SELLING
}

model Transaction {
  id String @id @default(uuid())

  product   Product @relation(fields: [productId], references: [id])
  productId String

  fromUser   User   @relation(name: "from", fields: [fromUserId], references: [id])
  fromUserId String

  toUser   User   @relation(name: "to", fields: [toUserId], references: [id])
  toUserId String

  transactionStatus TransactionStatus

  amount Float

  createdAt DateTime @default(now())
}
